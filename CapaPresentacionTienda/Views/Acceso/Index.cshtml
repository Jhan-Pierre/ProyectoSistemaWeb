@model CapaEntidad.Cliente
@{
    Layout = null;
    bool showRegister = ViewBag.ShowRegister ?? false;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="~/Content/styleA.css">
    <title>Login / Registro</title>
</head>
<body onload="toggleRegister(@(showRegister.ToString().ToLower()))">

    <div class="container" id="container">
        <div class="form-container sign-up">
            <form action="@Url.Action("Registrar", "Acceso")" method="post">
                <h1>Crear Cuenta</h1>
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-github"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <span>o usa tu correo electrónico para registrarte</span>

                @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control", @placeholder = "Nombres", required = "required" })
                @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control", @placeholder = "Apellidos", required = "required" })
                @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", @placeholder = "Correo Electrónico", required = "required" })
                @Html.PasswordFor(m => m.Clave, new { @class = "form-control", @placeholder = "Contraseña", required = "required" })
                @Html.PasswordFor(m => m.ConfirmarClave, new { @class = "form-control", @placeholder = "Confirmar Clave", required = "required" })

                @if (ViewBag.ErrorRegister != null)
                {
                    <div class="custom-alert">
                        @ViewBag.ErrorRegister
                    </div>
                }

                <button type="submit">Registrarse</button>
            </form>
        </div>

        <div class="form-container sign-in">
            <form action="@Url.Action("Index", "Acceso")" method="post">
                <h1>Iniciar Sesión</h1>
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-github"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <span>o usa tu correo electrónico y contraseña</span>
                <input placeholder="Correo Electrónico" name="correo" type="email" required>
                <input placeholder="Contraseña" name="clave" type="password" required>

                @if (@ViewBag.ErrorLogin != null)
                {
                    <div class="custom-alert">
                        @ViewBag.ErrorLogin
                    </div>
                }

                <a href="@Url.Action("Reestablecer", "Acceso")">¿Olvidaste tu contraseña?</a>
                <button type="submit">Ingresar</button>
            </form>
        </div>

        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>¡Bienvenido de nuevo!</h1>
                    <p>Ingresa tus datos personales para utilizar todas las funciones del sitio</p>
                    <button class="hidden" id="login">Iniciar Sesión</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>¡Hola, Amigo!</h1>
                    <p>Regístrate para acceder a todas las funciones del sitio</p>
                    <button class="hidden" id="register">Registrarse</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/script.js"></script>
</body>
</html>
